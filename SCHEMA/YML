MODELS:
  - NAME: FACT_SALES
    DESCRIPTION: "FACT TABLE OF SALES TRANSACTIONS"
    COLUMNS:
      - NAME: ORDER_ID
        DESCRIPTION: "PRIMARY KEY OF ORDERS"
        TESTS:
          - NOT_NULL
          - UNIQUE
      - NAME: CUSTOMER_ID
        DESCRIPTION: "CUSTOMER ID FROM DIM_CUSTOMERS"
        TESTS:
          - NOT_NULL
          - RELATIONSHIPS:
              TO: REF('DIM_CUSTOMERS')
              FIELD: CUSTOMER_ID
      - NAME: PRODUCT_ID
        DESCRIPTION: "PRODUCT ID FROM DIM_PRODUCTS"
        TESTS:
          - NOT_NULL
          - RELATIONSHIPS:
              TO: REF('DIM_PRODUCTS')
              FIELD: PRODUCT_ID
      - NAME: ORDER_STATUS
        DESCRIPTION: "STATUS OF THE ORDER"
        TESTS:
          - ACCEPTED_VALUES:
              VALUES: ['PENDING', 'COMPLETED', 'CANCELLED']

  - NAME: DIM_CUSTOMERS
    DESCRIPTION: "DIMENSION TABLE FOR CUSTOMERS"
    COLUMNS:
      - NAME: CUSTOMER_ID
        DESCRIPTION: "PRIMARY KEY OF CUSTOMER"
        TESTS:
          - NOT_NULL
          - UNIQUE

  - NAME: DIM_PRODUCTS
    DESCRIPTION: "DIMENSION TABLE FOR PRODUCTS"
    COLUMNS:
      - NAME: PRODUCT_ID
        DESCRIPTION: "PRIMARY KEY OF PRODUCT"
        TESTS:
          - NOT_NULL
          - UNIQUE
